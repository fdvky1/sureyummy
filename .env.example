# Database Configuration
# PostgreSQL connection string (for connection pooling)
DATABASE_URL="postgresql://user:password@host:port/database?sslmode=require"

# Uncomment if using Prisma <5.10 or need direct connection
# DATABASE_URL_UNPOOLED="postgresql://user:password@host:port/database?sslmode=require"

# NextAuth Configuration
# Generate a secure random string for production: openssl rand -base64 32
NEXTAUTH_SECRET="your-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# MinIO S3-Compatible Storage Configuration
MINIO_ENDPOINT="localhost"
MINIO_PORT="9000"
MINIO_USE_SSL="false"
MINIO_ACCESS_KEY="your-access-key"
MINIO_SECRET_KEY="your-secret-key"
MINIO_BUCKET_NAME="sureyummy-images"
MINIO_PUBLIC_URL="http://localhost:9000"

# OpenAI Compatible AI Configuration for Upselling
# Format: "baseurl|apikey|model"
# Example for OpenAI: "https://api.openai.com/v1|sk-xxx|gpt-4o"
# Example for local Ollama: "http://localhost:11434/v1|ollama|llama3"
# Example for other providers: "https://api.your-provider.com/v1|your-key|model-name"
OPENAI_CONFIG="https://api.openai.com/v1|your-api-key-here|gpt-4o-mini"

# Demo Mode Configuration
# Set to "true" to enable demo mode restrictions
# Demo mode prevents: delete/update default data, MinIO uploads/deletes
NEXT_PUBLIC_DEMO_MODE="false"
